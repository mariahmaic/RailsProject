<p style="color: green"><%= notice %></p>

<h1>Names</h1>

<%= link_to "New name", new_name_path %>

<div id="names">
  <% @names.each do |name| %>
    <%= render name %>
    <p>
      <%= link_to "Show this name", name %>
    </p>
  <% end %>
</div>

<%= will_paginate @names, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
